{   
  "editor.defaultFormatter": "ms-python.black-formatter",
  "editor.formatOnSave": true,
  "black-formatter.args": [
    "--line-length", "110",
  ],


  "flake8.args": [
    "--max-line-length", "110",
    "--extend-ignore", "E203"
  ],


  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.formatOnSave": true,
  },

  "editor.rulers": [
   {
     "column": 110,    
     "color": "#ffffff"  
   },
    
  ],
}
